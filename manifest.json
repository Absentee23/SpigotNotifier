{
  "manifest_version": 2,

  "name": "Spigot Notifier",
  "description": "Get notifications in chrome.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "spigot.png",
   "default_popup": "popup.html"
  },
  "content_scripts": [{
	"js": ["jquery.js"],
	"matches": ["http://*/*", "https://*/*"]
	}],
	"background": {
    "page": "popup.html"
  },
  "permissions": [
   "activeTab"
   ]
}